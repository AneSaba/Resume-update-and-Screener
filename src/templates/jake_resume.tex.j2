\begin{document}

%----------HEADING----------
\begin{center}
    \textbf{\Huge \scshape {{ personal_info.name|latex_escape }}} \\ \vspace{1pt}
    \small {{ personal_info.phone|latex_escape }} $|$ \href{mailto:{{ personal_info.email }}}{\underline{ {{- personal_info.email -}} }}{%- if personal_info.linkedin %} $|$
    \href{https://{{ personal_info.linkedin }}}{\underline{ {{- personal_info.linkedin -}} }}{%- endif %}{%- if personal_info.github %} $|$
    \href{https://{{ personal_info.github }}}{\underline{ {{- personal_info.github -}} }}{%- endif %}
\end{center}


%-----------EXPERIENCE-----------
\section{Experience}
  \resumeSubHeadingListStart

{% for exp in experience %}
    \resumeSubheading
      {{ "{" }}{{ exp.title|latex_escape }}{{ "}" }}{{ "{" }}{{ exp.dates|latex_escape }}{{ "}" }}
      {{ "{" }}{{ exp.company|latex_escape }}{{ "}" }}{{ "{" }}{{ exp.location|latex_escape }}{{ "}" }}
      \resumeItemListStart
{% for bullet in exp.bullets %}
        \resumeItem{{ "{" }}{{ bullet|latex_escape }}{{ "}" }}
{% endfor %}
      \resumeItemListEnd

{% endfor %}
  \resumeSubHeadingListEnd


{% if projects %}
%-----------PROJECTS-----------
\section{Projects}
    \resumeSubHeadingListStart
{% for project in projects %}
      \resumeProjectHeading
          {{ "{" }}\textbf{{ "{" }}{{ project.name|latex_escape }}{{ "}" }} $|$ \emph{{ "{" }}{{ project.technologies|latex_escape }}{{ "}" }}{{ "}" }}{{ "{" }}{{ project.date|latex_escape }}{{ "}" }}
          \resumeItemListStart
{% for bullet in project.bullets %}
            \resumeItem{{ "{" }}{{ bullet|latex_escape }}{{ "}" }}
{% endfor %}
          \resumeItemListEnd
{% endfor %}
    \resumeSubHeadingListEnd
{% endif %}


%-----------EDUCATION-----------
\section{Education}
  \resumeSubHeadingListStart
{% for edu in education %}
    \resumeSubheading
      {{ "{" }}{{ edu.institution|latex_escape }}{{ "}" }}{{ "{" }}{{ edu.location|latex_escape }}{{ "}" }}
      {{ "{" }}{{ edu.degree|latex_escape }}{% if edu.gpa %}, GPA: {{ edu.gpa }}{% endif %}{{ "}" }}{{ "{" }}{{ edu.dates|latex_escape }}{{ "}" }}
{% if edu.additional_info %}
      \resumeItemListStart
{% for info in edu.additional_info %}
        \resumeItem{{ "{" }}{{ info|latex_escape }}{{ "}" }}
{% endfor %}
      \resumeItemListEnd
{% endif %}
{% endfor %}
  \resumeSubHeadingListEnd


